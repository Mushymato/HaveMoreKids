{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Changes": [
    // This is data exclusive to Muffin
    // Since this is being included through kid.json, {{L@Kid}}='muffin'
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/ChildData",
      "Fields": {
        "{{ModId}}_{{L@Kid}}": {
          "Gender": "Female",
          // Kids need a Home entries (to not spawn in middle of Town), just like normal NPCs
          "Home": [
            {
              "Id": "Default",
              "Location": "BusStop",
              "Tile": {
                "X": 12,
                "Y": 22
              },
              "Direction": "right"
            }
          ],
        }
      }
    },
    // Spirit's Eve appearance
    {
      "Action": "Load",
      "Target": "Characters/{{ModId}}_{{L@Kid}}/{{L@Kid}}_royal, Characters/{{ModId}}_{{L@Kid}}/{{L@Kid}}_super",
      "FromFile": "assets/Characters/{{L@Kid}}/{{TargetWithoutPath}}.png"
    },
    {
      "Action": "Load",
      "Target": "Portraits/{{ModId}}_{{L@Kid}}/{{L@Kid}}_royal, Portraits/{{ModId}}_{{L@Kid}}/{{L@Kid}}_super",
      "FromFile": "assets/Portraits/{{L@Kid}}/{{TargetWithoutPath}}.png"
    },
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/ChildData",
      "TargetField": [
        "{{ModId}}_{{L@Kid}}",
        "Appearance"
      ],
      "Entries": {
        "{{L@Kid}}_SpiritsEve_Royal": {
          "Id": "{{L@Kid}}_SpiritsEve_Royal",
          "Portrait": "Portraits/{{ModId}}_{{L@Kid}}/{{L@Kid}}_royal",
          "Sprite": "Characters/{{ModId}}_{{L@Kid}}/{{L@Kid}}_royal",
          "Condition": "SEASON_DAY fall 27",
          "Precedence": -1000,
        },
        "{{L@Kid}}_SpiritsEve_Super": {
          "Id": "{{L@Kid}}_SpiritsEve_Super",
          "Portrait": "Portraits/{{ModId}}_{{L@Kid}}/{{L@Kid}}}_super",
          "Sprite": "Characters/{{ModId}}_{{L@Kid}}/{{L@Kid}}_super",
          "Condition": "SEASON_DAY fall 27",
          "Precedence": -1000,
        },
      }
    },

{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Changes": [
    // example of an odd sized kid
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/Kids",
      "Entries": {
        // debug action mushymato.HaveMoreKids_SetNewChildEvent 0 mushymato.NPCAdoption_PepperRex Player
        "{{ModId}}_PepperRex": {
          "TwinMessage": "Jas came chasing after Charles the Pepper Rex!",
          "Twin": "Jas"
        }
      },
    },
    {
      "Action": "EditData",
      "Target": "Data/TriggerActions",
      "Entries": {
        // debug action MarkActionApplied Current mushymato.NPCAdoption_PepperRex_AgeUp false
        "{{ModId}}_PepperRex_AgeUp": {
          "Id": "{{ModId}}_PepperRex_AgeUp",
          "Trigger": "mushymato.HaveMoreKids_NewChild",
          "Condition": "mushymato.HaveMoreKids_HAS_CHILD {{ModId}}_PepperRex",
          "Action": "mushymato.HaveMoreKids_SetChildAge {{ModId}}_PepperRex 3"
        },
      }
    },
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/ChildData",
      "Entries": {
        "{{ModId}}_PepperRex": {
          "DisplayName": "Charles",
          "Appearance": [
            // BABY APPEARANCE
            {
              "Id": "HMK_BABY",
              "Sprite": "Characters/Baby"
            },
            // TODDLER APPEARANCE
            {
              "Id": "DINO",
              "Sprite": "Characters/Monsters/Pepper Rex"
            },
          ],
          "Size": {
            "X": 32,
            "Y": 32
          },
          "Shadow": {
            "Visible": false,
          }
        }
      }
    },
  ]
}
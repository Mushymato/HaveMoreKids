{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Changes": [
    // example of an odd sized kid
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/Kids",
      "Entries": {
        // debug action mushymato.HaveMoreKids_SetNewChildEvent 0 mushymato.NPCAdoption_PepperRex Player
        "{{ModId}}_PepperRex": {
          "Condition": "FALSE",
          "BirthOrAdoptMessage": "Charles the Pepper Rex broke in through the window!",
          "BirthOrAdoptAsToddler": true,
          "TwinMessage": "Jas came chasing after Charles!",
          "Twin": "Jas"
        }
      },
    },
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/ChildData",
      "Entries": {
        "{{ModId}}_PepperRex": {
          "DisplayName": "Charles",
          "Appearance": [
            // BABY APPEARANCE
            {
              "Id": "HMK_BABY",
              "Sprite": "Characters/Baby"
            },
            // TODDLER APPEARANCE
            {
              "Id": "DINO",
              "Sprite": "Characters/Monsters/Pepper Rex"
            },
          ],
          "Size": {
            "X": 32,
            "Y": 32
          },
          "Shadow": {
            "Visible": false,
          }
        }
      }
    },
  ]
}
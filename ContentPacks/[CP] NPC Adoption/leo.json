{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Changes": [
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/Kids",
      "Entries": {
        // debug action mushymato.HaveMoreKids_SetNewChildEvent 0 Leo Player
        "Leo": {
          "BirthOrAdoptMessage": "Leo came to the farm!",
          "AdoptedFromNPC": "Leo",
          // Add Leo to the adoption registry in the hospital, this is a GSQ
          "CanAdoptFromAdoptionRegistry": "TRUE",
          // On thursdays, let the NPC Leo appear
          "IsNPCTodayCondition": "DAY_OF_WEEK Thurs",
          // optional: use alternate dialogue sheet name for the child version
          "DialogueSheetName": "{{ModId}}_KidLeoDialogue"
        }
      },
    },
    {
      "Action": "EditData",
      "Target": "Data/Characters",
      "TargetField": [
        "Leo",
        "CustomFields"
      ],
      "Entries": {
        // control 
        "mushymato.HaveMoreKids/IsNPCToday": "DAY_OF_WEEK Thurs",
        "mushymato.HaveMoreKids/KidDialogueSheet": "{{ModId}}_KidLeoDialogue",
      }
    },
    {
      "Action": "Load",
      "Target": "Characters/Dialogue/{{ModId}}_KidLeoDialogue",
      "FromFile": "blank.json"
    },
    {
      "Action": "EditData",
      "Target": "Characters/Dialogue/{{ModId}}_KidLeoDialogue",
      "Entries": {
        "Mon": "Mon",
        "Tue": "Tue",
        "Wed": "Wed",
        "Thu": "Thu",
        "Fri": "Fri",
        "Sat": "Sat",
        "Sun": "Sun",
      }
    }
  ]
}
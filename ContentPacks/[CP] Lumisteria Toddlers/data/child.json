{
  "$schema": "https://smapi.io/schemas/content-patcher.json",
  "Changes": [
    // babies
    {
      "Action": "Load",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Baby",
      "FromFile": "Assets/base/Baby.png",
    },
    {
      "Action": "EditImage",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Baby",
      "FromFile": "Assets/baby/body/{{L@Body}}.png",
      "PatchMode": "Overlay"
    },
    {
      "Action": "EditImage",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Baby",
      "FromFile": "Assets/baby/clothes/{{L@Spouse}}{{L@Seq}}.png",
      "PatchMode": "Overlay"
    },
    {
      "Action": "EditImage",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Baby",
      "FromFile": "Assets/baby/hairs/{{L@Spouse}}.png",
      "PatchMode": "Overlay"
    },
    // toddlers
    {
      "Action": "Load",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Toddler",
      "FromFile": "Assets/body/{{L@Body}}.png",
    },
    {
      "Action": "EditImage",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Toddler",
      "FromFile": "Assets/eyes/{{EyeStyle}}{{L@Eyes}}/{{L@Spouse}}.png",
      "PatchMode": "Overlay"
    },
    {
      "Action": "EditImage",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Toddler",
      "FromFile": "Assets/hairs/{{L@Spouse}}/{{L@Hair}}.png",
      "PatchMode": "Overlay"
    },
    {
      "Action": "EditImage",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Toddler",
      "FromFile": "Assets/clothes/{{L@Spouse}}/{{L@Seq}}{{Random:01,02,03,04,05,06,07,08,09,10,11,12}}.png",
      "PatchMode": "Overlay"
    },
    // toddlers (costume)
    {
      "Action": "Load",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Costume",
      "FromFile": "Assets/body/{{L@Body}}.png",
    },
    {
      "Action": "EditImage",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Costume",
      "FromFile": "Assets/eyes/{{EyeStyle}}{{L@Eyes}}/{{L@Spouse}}.png",
      "PatchMode": "Overlay"
    },
    {
      "Action": "EditImage",
      "Target": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Costume",
      "FromFile": "Assets/costumes/{{Random:fairy,flower,fortuneteller,ghost,mouse,mummy,owl,queensauce,snowman,witch}}.png",
      "PatchMode": "Overlay"
    },
    // Child data
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/ChildData",
      "Entries": {
        "{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}": {
          "DisplayName": "{{L@Seq}}{{L@Hair}}",
          "IsDarkSkinned": "{{L@Body|contains={{AltBody}}}}",
          "Appearance": [
            {
              "Id": "mushymato.HaveMoreKids_Toddler",
              "Sprite": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Toddler",
            },
            {
              "Id": "mushymato.HaveMoreKids_Toddler_Costume",
              "Sprite": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Costume",
              "Condition": "SEASON_DAY fall 27",
              "Precedence": -1000,
            },
            {
              "Id": "HMK_BABY",
              "Sprite": "Characters/{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}_Baby"
            }
          ]
        }
      }
    },
    // Add this Child to spouse or shared
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/Kids",
      "Entries": {
        "{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}": {
          "Parent": "{{L@Parent}}"
        }
      },
      "When": {
        "L@Parent |contains=shared": false
      }
    },
    {
      "Action": "EditData",
      "Target": "mushymato.HaveMoreKids/Kids",
      "Entries": {
        "{{ModId}}_{{L@Spouse}}-{{L@Seq}}-{{L@Hair}}": {
          "Shared": true
        }
      },
      "When": {
        "L@Parent |contains=shared": true
      }
    },
  ]
}
